# Fichier d'environnement pour le développement
# IMPORTANT: Ce fichier contient des exemples - créez votre propre .env en production

# Configuration de la base de données
DATABASE_URL=postgresql://sudosecure:sudosecure_password@postgres:5432/sudosecure_db

# Configuration JWT (CHANGEZ EN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuration CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080","http://127.0.0.1:8080"]

# Configuration de l'application
APP_NAME=SudoSecure
ENVIRONMENT=development
DEBUG=true

# Clé de chiffrement (optionnelle - générée automatiquement si non définie)
# ENCRYPTION_KEY=your-encryption-key-here