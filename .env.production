# Configuration de production pour SudoSecure
# Copiez ce fichier vers .env en production et personnalisez les valeurs

# Base de données PostgreSQL
POSTGRES_DB=sudosecure_prod
POSTGRES_USER=sudosecure
POSTGRES_PASSWORD=CHANGEZ_CE_MOT_DE_PASSE_SECURISE
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis (recommandé en production)
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=CHANGEZ_CE_MOT_DE_PASSE_REDIS

# JWT Configuration
SECRET_KEY=CHANGEZ_CETTE_CLE_SECRETE_MINIMUM_32_CARACTERES_ALEATOIRES
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Application
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# CORS (adaptez selon votre domaine)
ALLOWED_ORIGINS=https://votre-domaine.com,https://www.votre-domaine.com

# Sécurité renforcée
PASSWORD_MIN_LENGTH=12
PASSWORD_HASH_ROUNDS=14
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=30

# 2FA
TOTP_ISSUER=SudoSecure Production
TOTP_ALGORITHM=SHA1
TOTP_DIGITS=6
TOTP_PERIOD=30

# SSL/TLS (si certificats disponibles)
SSL_CERT_PATH=/etc/ssl/certs/sudosecure.crt
SSL_KEY_PATH=/etc/ssl/private/sudosecure.key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090